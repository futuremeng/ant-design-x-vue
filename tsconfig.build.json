{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./typings",
    "lib": ["esnext", "dom"],
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "moduleResolution": "node",
    "strictNullChecks": false,
    "baseUrl": "./",
    "types": ["unplugin-vue-macros/macros-global", "node"],
    "paths": {
      "@futuremeng/ant-design-x-vue": ["src/index.ts"],
      "@futuremeng/ant-design-x-vue/*": ["src/*"],
      "@futuremeng/ant-design-x-vue/resolver/*": ["src/resolver/*"],
    }
  },
  "vueCompilerOptions": {
    "plugins": ["unplugin-vue-macros/volar"]
  },
  "include": ["src/index.ts", "src/x-provider/**/*", "src/theme/**/*", "src/bubble/**/*"],
  "exclude": ["src/**/__tests__/**/*"]
}
